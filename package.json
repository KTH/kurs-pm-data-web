{
  "name": "kurs-pm-web",
  "version": "0.8.0",
  "description": "Kurs-pm-data-web is a microservice with the public view of course memos. It uses React, MobX, and is based on KTH/node-web.",
  "main": "app.js",
  "private": true,
  "license": "MIT",
  "author": "KTH",
  "repository": {
    "type": "git",
    "uri": "https://github.com/KTH/kurs-pm-web"
  },
  "scripts": {
    "vendor": "parcel build  ./public/js/vendor.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "docker": "npm install --development && npm run build && npm prune --production",
    "build": "NODE_ENV=production rm -rf dist && parcel build ./public/js/app/app.jsx && npm run vendor --preserve-comments",
    "build-dev": "cross-env NODE_ENV=development rm -rf dist && parcel build ./public/js/vendor.js --public-url /kurs-pm/static && parcel watch ./public/js/app/app.jsx --public-url /kurs-pm/static",
    "start": "NODE_ENV=production node app.js",
    "start-dev": "cross-env NODE_ENV=development concurrently --kill-others \"npm run build-dev\" \"nodemon --ignore dist/ --ignore public/ app.js\""
  },
  "dependencies": {
    "applicationinsights": "^1.8.8",
    "axios": "^0.20.0",
    "body-parser": "^1.19.0",
    "component-registry": "^1.3.1",
    "cookie-parser": "^1.4.5",
    "date-fns": "^2.16.1",
    "date-fns-tz": "^1.0.10",
    "dotenv": "^8.2.0",
    "eslint-plugin-jest": "^24.1.0",
    "express": "^4.17.1",
    "express-handlebars": "^5.2.0",
    "http-proxy-middleware": "^1.0.5",
    "kth-node-access-log": "^0.2.2",
    "kth-node-api-call": "^3.0.11",
    "kth-node-configuration": "^2.0.1",
    "kth-node-express-routing": "^2.0.3",
    "kth-node-i18n": "^1.0.2",
    "kth-node-ldap": "^3.1.1",
    "kth-node-log": "^3.1.0",
    "kth-node-monitor": "^1.1.6",
    "kth-node-passport-cas": "^3.1.11",
    "kth-node-redis": "^3.1.6",
    "kth-node-server": "^3.1.2",
    "kth-node-session": "^1.0.4",
    "kth-node-web-common": "^5.1.3",
    "kth-style": "^5.0.30",
    "mobx": "^5.15.7",
    "mobx-react": "^5.4.4",
    "passport": "^0.4.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-icons": "^3.11.0",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "reactstrap": "^8.7.1",
    "safe-utils": "^0.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-decorators": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.5",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^10.4.9",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.12.1",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.0.2",
    "react-test-renderer": "^16.14.0",
    "sass": "^1.28.0"
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "engines": {
    "node": "12.14.1"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run test",
      "pre-commit": "pretty-quick --staged"
    }
  }
}
